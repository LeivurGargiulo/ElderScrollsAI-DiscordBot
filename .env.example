# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# LLM Backend Configuration (choose one: openrouter, ollama, lm_studio)
LLM_BACKEND=openrouter

# OpenRouter Configuration (required if LLM_BACKEND=openrouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Ollama Configuration (required if LLM_BACKEND=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# LM Studio Configuration (required if LLM_BACKEND=lm_studio)
LM_STUDIO_BASE_URL=http://localhost:1234
LM_STUDIO_MODEL=default